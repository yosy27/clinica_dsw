<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoClinicaDSW.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
</head>
<body>
    <div class="wrapper">
        <aside class="sidebar">
            <div class="sidebar-header text-center">
                <h2>Clínica Salud</h2>

                <img src="~/img/pngwing.com.png" alt="Logo Clínica Salud" class="img-fluid w-50 my-3" />
            </div>
            <ul class="sidebar-menu">
              
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: none;">Inicio</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Paciente" asp-action="FilterName" style="text-decoration: none;">Gestión de Pacientes</a>
                </li>
                <li><a class="nav-link text-white" asp-area="" asp-controller="Medico" asp-action="FilterMedico" style="text-decoration: none;">Gestión Medicos</a></li>
               <li><a class="nav-link text-white" asp-area="" asp-controller="Cita" asp-action="FilterCita" style="text-decoration: none;">Gestión de Citas</a></li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="HorarioMedico" asp-action="FilterHorario" style="text-decoration: none;">Horario de los médicos</a>
                </li>
               <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Salir" style="text-decoration: none;">Cerrar Sesión</a>
                </li>
                
            </ul>
        </aside>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.table-datatable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                responsive: true,
                autoWidth: false,
                pageLength: 10,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                paging: true
            });
        });
    </script>
</body>
</html>
