@model IEnumerable<ProyectoClinicaDSW.Models.Cita>

@{
    ViewData["Title"] = "FilterCita";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Listado de Citas</h1>

        <div class="mb-3">
            <form asp-action="FilterCita" class="d-flex">
                @Html.TextBox("inicial", "", new { @class = "form-control me-2", placeholder = "Ingrese el nombre de la cita" })
                <button class="btn btn-primary">Buscar</button>
            </form>
        </div>

        <p>
            <a asp-action="Create" class="btn btn-success">Registrar nueva cita</a>
        </p>

        <table id="citasTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.idCita)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreCita)</th>
                    <th>@Html.DisplayNameFor(model => model.nombrePaciente)</th>
                    <th>@Html.DisplayNameFor(model => model.dniPaciente)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreMedico)</th>
                    <th>@Html.DisplayNameFor(model => model.fechaHora)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreEstado)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.idCita)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreCita)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombrePaciente)</td>
                        <td>@Html.DisplayFor(modelItem => item.dniPaciente)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreMedico)</td>
                        <td>@Html.DisplayFor(modelItem => item.fechaHora)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreEstado)</td>
                        <td>
                            <div class="d-flex">
                                <button class="btn btn-primary me-2">
                                    @Html.ActionLink("Editar", "Edit", new { idCita = item.idCita }, new { @class = "text-white" })
                                </button>
                                <button class="btn btn-danger">
                                    @Html.ActionLink("Eliminar", "Delete", new { idCita = item.idCita }, new { @class = "text-white" })
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#citasTable').DataTable({
                dom: 't', 
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
</body>
</html>
