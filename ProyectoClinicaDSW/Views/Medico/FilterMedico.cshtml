@model IEnumerable<ProyectoClinicaDSW.Models.Medico>

@{
    ViewData["Title"] = "FilterMedico";
}
<div class="container mt-4">

    <h1>Listado de Medicos</h1>

    <div class="mb-3">
        <form asp-action="FilterMedico" class="d-flex">
            @Html.TextBox("inicial", "", new { @class = "form-control me-2", placeholder = "Ingrese el nombre de un medico" })

            <button class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-success">Registrar nuevo Medico</a>
    </p>

    <table id="medicoTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.idMedico)</th>
                <th>@Html.DisplayNameFor(model => model.nombreMedico)</th>
                <th>@Html.DisplayNameFor(model => model.dni)</th>
                <th>@Html.DisplayNameFor(model => model.contacto)</th>
                <th>@Html.DisplayNameFor(model => model.nombreEspecialidad)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.idMedico)</td>
                    <td>@Html.DisplayFor(modelItem => item.nombreMedico)</td>
                    <td>@Html.DisplayFor(modelItem => item.dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.contacto)</td>
                    <td>@Html.DisplayFor(modelItem => item.nombreEspecialidad)</td>
                    <td>
                        <div class="d-flex">
                            <a href="@Url.Action("Edit", "Medico", new { idMedico = item.idMedico })" class="btn btn-primary me-2">
                                Editar
                            </a>
                            <a href="@Url.Action("Delete", "Medico", new { idMedico = item.idMedico })" class="btn btn-danger">
                                Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#medicoTable').DataTable({
                dom: 't', // Solo muestra la tabla, sin controles de búsqueda o registros
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
</div>
