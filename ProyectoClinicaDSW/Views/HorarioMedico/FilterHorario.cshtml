@model IEnumerable<ProyectoClinicaDSW.Models.HorarioMedico>

@{
    ViewData["Title"] = "FilterHorario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Listado de Horarios</h1>

        <!-- Mostrar mensaje de éxito/error -->
        @if (!string.IsNullOrEmpty(ViewBag.mensaje))
        {
            <div class="alert alert-info">
                @ViewBag.mensaje
            </div>
        }

        <div class="mb-3">
            <form asp-action="FilterHorario" class="d-flex">
                @Html.TextBox("nomMedico", "", new { @class = "form-control me-2", placeholder = "Ingrese el nombre del médico" })
                <button class="btn btn-primary">Buscar</button>
            </form>
        </div>

        <p>
            <a asp-action="Create" class="btn btn-success">Registrar nuevo Horario</a>
        </p>

        <table id="horarioTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.idHorarioMedico)</th>
                    <th>@Html.DisplayNameFor(model => model.horaInicio)</th>
                    <th>@Html.DisplayNameFor(model => model.horaFin)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreDia)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreMedico)</th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.idHorarioMedico)</td>
                        <td>@Html.DisplayFor(modelItem => item.horaInicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.horaFin)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreDia)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreMedico)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#horarioTable').DataTable({
                dom: 't', // Solo muestra la tabla, sin controles de búsqueda o registros
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
</body>
</html>
