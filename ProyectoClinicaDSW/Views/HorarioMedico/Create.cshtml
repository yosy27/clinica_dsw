@model ProyectoClinicaDSW.Models.HorarioMedico

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Registrar Horario Médico</h1>

        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="horaInicio" class="form-label">Hora de Inicio</label>
                        <input asp-for="horaInicio" class="form-control" />
                        <span asp-validation-for="horaInicio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="horaFin" class="form-label">Hora de Fin</label>
                        <input asp-for="horaFin" class="form-control" />
                        <span asp-validation-for="horaFin" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="idDia" class="form-label">Día</label>
                        <select asp-for="idDia" class="form-select" asp-items="ViewBag.dias">
                            <option value="">Seleccione</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="idMedico" class="form-label">Médico</label>
                        <select asp-for="idMedico" class="form-select" asp-items="ViewBag.medicos">
                            <option value="">Seleccione</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Registrar" class="btn btn-primary" />
                        <a asp-action="FilterHorario" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.mensaje != null)
        {
            <div class="alert alert-success mt-4" role="alert">
                @ViewBag.mensaje
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
