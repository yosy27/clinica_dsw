@model ProyectoClinicaDSW.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Inicio de Sesión</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-controller="Usuario">
                        <div class="mb-3">
                            <label for="correoUsuario" class="form-label">Correo Electrónico</label>
                            <input type="email" id="correoUsuario" name="correoUsuario" class="form-control" placeholder="Ingresa tu correo" required />
                        </div>

                        <div class="mb-3">
                            <label for="clave" class="form-label">Contraseña</label>
                            <input type="password" id="clave" name="clave" class="form-control" placeholder="Ingresa tu contraseña" required />
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" id="mantenerActivo" name="MantenerActivo" class="form-check-input" />
                            <label class="form-check-label" for="mantenerActivo">Mantenerme activo</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Verifica si hay mensajes de error o éxito en TempData y muestra los SweetAlert
        @if (TempData["Error"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                    title: 'Oops...',
                    text: '@Html.Raw(TempData["Error"] as string)'  // Usar Html.Raw para evitar el escape de caracteres
                            });
            </text>
        }

        @if (TempData["Success"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                    title: '¡Éxito!',
                    text: '@Html.Raw(TempData["Success"] as string)'  // Usar Html.Raw para evitar el escape de caracteres
                            }).then((result) => {
                                // Redirige a la página de inicio después de un inicio de sesión exitoso
                                if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Index", "Home")';
                                }
                            });
            </text>
        }
    </script>
}
