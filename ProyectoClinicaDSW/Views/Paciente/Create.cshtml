@model ProyectoClinicaDSW.Models.Paciente

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Registrar Paciente</h1>


<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="form-group mb-3">
                <label asp-for="nombrePaciente" class="control-label">Nombre del Paciente</label>
                <input asp-for="nombrePaciente" class="form-control" />
                <span asp-validation-for="nombrePaciente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="apellidoPaciente" class="control-label">Apellido del Paciente</label>
                <input asp-for="apellidoPaciente" class="form-control" />
                <span asp-validation-for="apellidoPaciente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="correoPaciente" class="control-label">Correo Electrónico</label>
                <input asp-for="correoPaciente" class="form-control" />
                <span asp-validation-for="correoPaciente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="telefonoPaciente" class="control-label">Teléfono</label>
                <input asp-for="telefonoPaciente" class="form-control" />
                <span asp-validation-for="telefonoPaciente" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="dni" class="control-label">DNI</label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Crear" class="btn btn-primary me-2" />
                <a asp-action="FilterName" controller="Paciente" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    @ViewBag.mensaje
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
