@model ProyectoClinicaDSW.Models.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Editar Paciente</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Formulario de Edición de Paciente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="form-group mb-3">
                            <label asp-for="idPaciente" class="control-label">ID del Paciente</label>
                            <input asp-for="idPaciente" class="form-control" readonly />
                            <span asp-validation-for="idPaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="nombrePaciente" class="control-label">Nombre del Paciente</label>
                            <input asp-for="nombrePaciente" class="form-control" placeholder="Ingresa el nombre completo del paciente" />
                            <span asp-validation-for="nombrePaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="apellidoPaciente" class="control-label">Apellido del Paciente</label>
                            <input asp-for="apellidoPaciente" class="form-control" placeholder="Ingresa el apellido del paciente" />
                            <span asp-validation-for="apellidoPaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="correoPaciente" class="control-label">Correo Electrónico</label>
                            <input asp-for="correoPaciente" class="form-control" placeholder="Correo del paciente" />
                            <span asp-validation-for="correoPaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="telefonoPaciente" class="control-label">Teléfono</label>
                            <input asp-for="telefonoPaciente" class="form-control" placeholder="Número de teléfono" />
                            <span asp-validation-for="telefonoPaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="dni" class="control-label">DNI</label>
                            <input asp-for="dni" class="form-control" placeholder="DNI del paciente" />
                            <span asp-validation-for="dni" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="fechaRegistro" class="control-label">Fecha de Registro</label>
                            <input asp-for="fechaRegistro" class="form-control" readonly />
                            <span asp-validation-for="fechaRegistro" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between mt-4">
                            <input type="submit" value="Guardar Cambios" class="btn btn-success me-2" />
                            <a asp-action="FilterName" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
